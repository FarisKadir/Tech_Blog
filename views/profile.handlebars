<div class="row">
  <div class="col-auto">
    <h3>Welcome, {{capitalizeFirst firstName}}!</h3>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h4>Create A New Blog Post:</h4>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Blog Post Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h4>Your Blog Posts:</h4>
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-6">
        <h5><a href="/post/{{post.id}}">{{post.title}}</a></h5>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
